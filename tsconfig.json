{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "nodenext",
    "resolveJsonModule": true,
    "strict": true,
    "target": "ESNext",
    "types": ["node"],
    "removeComments": true,
    "outDir": "lib"
  },
  "typeRoots": ["typing-stubs", "node_modules/@types"],
  "exclude": ["node_modules", "lib", "dist", "src/frontend/**/*"],
  "include": ["src/**/*", "e2e/**/*"]
}
